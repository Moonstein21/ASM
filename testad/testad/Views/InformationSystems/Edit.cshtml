@using testad.Models.ViewModels
@using testad.Models
@model testad.Models.InformationSystem
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Редактирование ИСиС</h1>

<hr />
<div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="id" />
        <table class="table table-striped d-xl-table table-dark">
            <tbody>
                <tr>
                    <th>
                        <label asp-for="ListSystem" class="control-label"></label>
                        <input asp-for="ListSystem" class="form-control" />
                    </th>
                    <th>
                        <label asp-for="lvrol" class="control-label"></label>
                        <input asp-for="lvrol" class="form-control" id="text" />

                    </th>
                </tr>
            </tbody>
        </table>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-warning" />
            <a asp-action="Index" class="btn btn-success">Вернуться назад</a>
        </div>
    </form>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
