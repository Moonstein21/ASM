@model testad.Models.Request

@{
    ViewData["Title"] = "Sign";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <script>
        function sign() {
            var marh = document.getElementById("marh1").value;
            if (marh == 1) {
                document.getElementById("sing1").checked = true;
            }
            if (marh == 2) {
                document.getElementById("sing2").checked = true;
            }
             if (marh == 3) {
                document.getElementById("sing3").checked = true;
            }
             if (marh == 4) {
                document.getElementById("sing4").checked = true;
            }
        }
        function signend() {
            document.getElementById("marh1").value = -1;
        }
    </script>
</head>
<body>
    <h1 class="text-center">Согласовать заявку?</h1>
    <form asp-action="Sign">
        <div>
            <hr />
            <table class="table table-striped table-dark">
                <thead>
                    <tr hidden>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.subdivision)</td>
                        <td>@Html.DisplayFor(model => model.subdivision)<input hidden asp-for="subdivision" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.fio)</td>
                        <td>@Html.DisplayFor(model => model.fio)<input hidden asp-for="fio" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.position)</td>
                        <td>@Html.DisplayFor(model => model.position)<input hidden asp-for="position" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.numberphone)</td>
                        <td>@Html.DisplayFor(model => model.numberphone)<input hidden asp-for="numberphone" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.numberroom)</td>
                        <td>@Html.DisplayFor(model => model.numberroom)<input hidden asp-for="numberroom" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.inventorynumber)</td>
                        <td>@Html.DisplayFor(model => model.inventorynumber)<input hidden asp-for="inventorynumber" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.baseservers)</td>
                        <td>@Html.DisplayFor(model => model.baseservers)<input hidden asp-for="baseservers" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.informationsystem)</td>
                        <td>@Html.DisplayFor(model => model.informationsystem)<input hidden asp-for="informationsystem" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.documents)</td>
                        <td hidden>
                            <label class="form-check-label" type="checkbox">
                                <input class="form-check-input" asp-for="documents" />
                            </label>>
                        </td>
                        @if (Model.documents == true)
                        {
                            <td>Ознакомлен</td>
                        }
                        else
                        {
                            <td>Не ознакомлен</td>
                        }
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.leadersubdivision)</td>
                        <td hidden>
                            <div class="form-group form-check">
                                <label class="form-check-label" type="checkbox" for="defaultCheck1">
                                    <input class="form-check-input" asp-for="leadersubdivision" id="sing1" />
                                </label>
                            </div>
                        </td>
                        @if (Model.leadersubdivision == true)
                        {
                            <td>Согласовано</td>
                        }
                        else
                        {
                            <td>Не согласовано</td>
                        }
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.departmentoz)</td>
                        <td hidden>
                            <div class="form-group form-check">
                                <label class="form-check-label" type="checkbox" for="defaultCheck1">
                                    <input class="form-check-input" asp-for="departmentoz" id="sing2" />
                                </label>
                            </div>
                        </td>
                        @if (Model.departmentoz == true)
                        {
                            <td>Согласовано</td>
                        }
                        else
                        {
                            <td>Не согласовано</td>
                        }
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.departmentib)</td>
                        <td hidden>
                            <div class="form-group form-check">
                                <label class="form-check-label" type="checkbox" for="defaultCheck1">
                                    <input class="form-check-input" asp-for="departmentib" id="sing3" />
                                </label>
                            </div>
                        </td>
                        @if (Model.departmentib == true)
                        {
                            <td>Согласовано</td>
                        }
                        else
                        {
                            <td>Не согласовано</td>
                        }
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.signIT)</td>
                        <td hidden>
                            <div class="form-group form-check">
                                <label class="form-check-label" type="checkbox" for="defaultCheck1">
                                    <input class="form-check-input" asp-for="signIT" id="sing4" />
                                </label>
                            </div>
                        </td>
                        @if (Model.signIT == true)
                        {
                            <td>Согласовано</td>
                        }
                        else
                        {
                            <td>Не согласовано</td>
                        }
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.status)</td>
                        <td>@Html.DisplayFor(model => model.status)<input hidden asp-for="status" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.marh)</td>
                        <td hidden><input asp-for="marh" value="@ViewBag.Marh" class="form-control" id="marh1" /></td>
                        @if (Model.marh == 0)
                        {
                            <td>Отказано в предоставлении прав</td>
                        }
                        @if (Model.marh == 1)
                        {
                            <td>На соглосовании у руководителя структурного подразделения</td>
                        }
                        @if (Model.marh == 2)
                        {
                            <td>На соглосовании у владельца ИСиС</td>
                        }
                        @if (Model.marh == 3)
                        {
                            <td>На соглосовании у ответственного по ИБ</td>
                        }
                        @if (Model.marh == 4)
                        {
                            <td>На соглосовании у руководителя отдела ИТиС</td>
                        }
                        @if (Model.marh == 5)
                        {
                            <td>Успешно выполнена</td>
                        }
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.login)</td>
                        <td>@Html.DisplayFor(model => model.login)<input hidden asp-for="login" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.namecreated)</td>
                        <td>@Html.DisplayFor(model => model.namecreated)<input hidden asp-for="namecreated" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.deportmencreated)</td>
                        <td>@Html.DisplayFor(model => model.deportmencreated)<input hidden asp-for="deportmencreated" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.positcreated)</td>
                        <td>@Html.DisplayFor(model => model.positcreated)<input  hidden asp-for="positcreated" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" class="btn btn-success" value="Подписать" onclick="sign();">
                            <input type="submit" class="btn btn-danger" value="Отклонить" onclick="signend();">
                            <a asp-action="Index" class="btn btn-primary">Вернуться к списку</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </form>
</body>
</html>
  
